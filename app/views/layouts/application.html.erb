			<style type="text/css">
			html .jqueryslidemenu{height: 1%;} /*Holly Hack for IE7 and below*/
			</style>
		<![endif] -->
		
		<%= init_tinymce_hammer_if_required %>

		<!-- FBcDbhr0WsxceBrjSWDlzAl1hio -->
