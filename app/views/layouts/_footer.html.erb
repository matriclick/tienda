<% cache ['footer_1'] do %>
<hr >
<div class="container marketing">
  <!-- FOOTER -->
  <footer>
		<div class="row" style="font-weight:lighter; font-size:12px">
			<div class="col-md-2">
				<ul class="footer_links">
					<li class="footer_title">SÍGUENOS</li>
					<li><%= link_to image_tag('footer/social-black-facebook.jpg'), 'https://www.facebook.com/tramantaonline', 
							:target => '_blank' %> 
						<%= link_to image_tag('footer/social-black-twitter.jpg'), 'https://twitter.com/tramantaonline', 
								:target => '_blank' %>
					</li>
					<li style="margin-top:5px"><%= link_to image_tag('footer/social-black-pinterest.jpg'), 'http://pinterest.com/tramanta', 
						:target => '_blank' %></li>
				</ul>
			</div>
			<div class="col-md-3">
				<ul class="footer_links">
					<li class="footer_title">AYUDA</li>
					<li><%= link_to '¿Cómo funciona?', home_tour_path %></li>
					<li><%= link_to 'Preguntas frecuentes', faq_elbazar_path %></li>
					<li><%= link_to 'Registrarse', new_user_registration_path %></li>
				</ul>	
			</div>
			<div class="col-md-3">
				<ul class="footer_links">
					<li class="footer_title">SERVICIO AL CLIENTE</li>
					<li><%= link_to 'Política de devoluciones', refund_policy_path, :id => 'form_inline' %></li>
					<li><%= link_to 'Solicitar devolución', new_refund_request_path %></li>
					<li><%= link_to 'Contacto clientes', contact_elbazar_path %></li>
				</ul>
			</div>
			<div class="col-md-3">
				<ul class="footer_links">
					<li class="footer_title">EMPRESAS</li>
					<li><%= link_to 'Ingresar como empresa', new_supplier_session_path, :rel => 'nofollow' %></li>
					<li><%= link_to 'Contacto empresas', contact_elbazar_path %></li>
				</ul>	
			</div>
		</div>
		<div class="row" style="text-align:center; margin-top:20px">
			<%= form_for @subscriber, :html => {class: "form-inline", role: "form"}, :url => subscription_create_path, :validate => false do |f| %>
				<div class="form-group">
					<%= f.text_field :email, class: "form-control", placeholder: "Correo" %>
				</div>
				<div class="form-group">
					<%= f.grouped_collection_select(:commune_id, Region.order(:name), :communes, :name, :id, :name, 
																					{ :prompt => 'Comuna' }, { :class=> "form-control", style: 'width:100%' }) %>
				</div>
					<%= f.submit 'Suscribirse', class: "btn btn-default" %>
			<% end %>
		</div>
		<div class="row" style="text-align:center; margin-top:20px; font-weight:lighter; font-size:12px">
    	<!--<p class="pull-right"><a href="#">Volver a arriba</a></p>-->
			<p>&copy; 2013 Tramanta &middot; <%= link_to 'Términos de Uso', terms_path %></p>
		</div>
  </footer>

</div><!-- /.container -->
<% end %>