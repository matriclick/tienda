<% if params[:yield_fancybox] %>
	<%= yield %>
<% else %>
	<%= render "layouts/user_bar" %>
	<% if !current_user.nil? and (current_user.role_id == 1 or current_user.role_id == 2) %>
		<%= render "layouts/my_stores" %>
	<% end %>
	<% unless @not_breadcrumbs or ['registrations', 'sessions', 'passwords'].include? controller_name %>
		<%= render "layouts/breadcrumbs" %>
	<% end %>
	<%= yield %>
	<%= render "layouts/footer" %>
<% end %>
