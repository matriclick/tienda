<% if params[:yield_fancybox] %>
	<%= yield %>
<% else %>
	<%= render "layouts/user_bar" %>
	<% unless @not_breadcrumbs or ['registrations', 'sessions', 'passwords', 'packs'].include? controller_name %>
		<%= render "layouts/breadcrumbs" %>
	<% end %>
	<%= yield %>
	<%= render "layouts/footer" %>
	<%= render 'layouts/notice', notice: notice %>
<% end %>
