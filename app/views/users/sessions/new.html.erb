<div class="sign_in_background">
	<div class="container">
		<%= render 'layouts/notice', notice: notice %>
		<div class="row">
			<div class="col-md-12">
				<h1 style="color:white; margin:20px 0px 10px 10px">Ingresa a Tramanta.com</h1>
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {role: 'form', class:'form-inline'} ) do |f| %>
						<%= f.email_field :email, :placeholder => t('email'), style: 'width:200px; margin:10px', :class => "form-control" %>
						<%= f.password_field :password, :placeholder => t('password'), style: 'width:200px; margin:10px', :class => "form-control" %>
						<%= f.submit 'Ingresar', :class => "btn btn-default", style: 'width:200px; margin:10px' %>			
					<% end %>

					<%- if devise_mapping.omniauthable? %>
						<div style="margin:10px">
								<%= link_to 'Entra con tu cuenta de Facebook', omniauth_authorize_path(resource_name, 'facebook') %>
						</div>
					<% end -%>
					<div style="margin:10px">
						<%= link_to '¿Se te olvidó tu clave?', new_password_path(resource_name) %>
					</div>
					<div style="margin:10px">
						<%= link_to '¿Nuevo en Tramanta? Crea una cuenta', new_password_path(resource_name) %>
					</div>
			</div>			
		</div>
	</div>
</div>