	      		<% (@init_week..@end_week).each do |week| %>
							<th>
									<%= week.to_s+' - '+year.to_s %><br />
									<%= Date.commercial(year, week, 1).strftime('%d/%m') %>
							</th>
						<% end %>
					<% end %>
