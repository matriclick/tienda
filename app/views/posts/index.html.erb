<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="row" style="margin-bottom:20px">
				<div class="col-md-12">
					<%= link_to 'Nuevo Post', new_post_path,  class: "btn btn-default btn-sm" %>
				</div>
			</div>
			<table class="table">
			  <tr>
			    <th>Título</th>
					<th>Visible</th>
			    <th>Fecha Creación</th>				
			    <th></th>
			  </tr>

			<% @posts.each do |post| %>
			  <tr>
					<td><%= post.title %></td>
					<td><%= post.visible ? 'Sí' : 'No' %></td>
					<td><%= l(post.date) %></td>
					<td><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
			  </tr>
			<% end %>
			</table>
		</div>
	</div>
</div>
