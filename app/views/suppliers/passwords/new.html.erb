<div class="sign_in_background">
	<div class="container">
		<%= render 'layouts/notice', notice: notice %>
		<div class="row">
			<div class="col-md-12">
				<h1 style="color:white; margin:20px 0px 10px 10px">Resetear clave</h1>
					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: 'form', class:'form-inline' }) do |f| %>
					  <%= devise_error_messages! %>
						<%= f.email_field :email, :placeholder => t('email'), style: 'width:500px; margin:10px', :class => "form-control" %>
						<%= f.submit 'Enviar Instrucciones', :class => "btn btn-default", style: 'width:200px; margin:10px' %>			
					<% end %>

					<%- if devise_mapping.omniauthable? %>
						<div style="margin:10px">
								<%= link_to 'Entra con tu cuenta de Facebook', omniauth_authorize_path(resource_name, 'facebook') %>
						</div>
					<% end -%>
					<div style="margin-top:20px">
						<%= link_to 'Â¿Te acordaste de tu clave?', new_session_path(resource_name) %>
					</div>
			</div>			
		</div>
	</div>
</div>