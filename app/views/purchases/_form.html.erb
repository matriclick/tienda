<%= form_for(@purchase) do |f| %>
  <% if @purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% @purchase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag(@purchase.purchasable.small_image) %><br />
  <h2><%= @purchase.purchasable.supplier_account.fantasy_name if !@purchase.purchasable.supplier_account.nil? %></h2>

  <div class="field">
    <%= f.label :price, 'Total monto pagado por el cliente' %> <%= f.text_field :price %>
  </div>
  <br />
  <div class="field">
    <%= f.label :currency %> <%= f.text_field :currency %>
  </div>
  <br />
  <div class="field">
    <%= f.label :tracking_number %> <%= f.text_field :tracking_number %>
  </div>
  <br />
  <div class="field">
    <%= f.label :logistic_provider_id %> 
	<%= f.collection_select :logistic_provider_id, LogisticProvider.all, :id, :name, :prompt => true, :allow_blank => false %>
  </div>
  <br />
  <div class="field">
    <%= f.label :funds_received %> <%= f.check_box :funds_received %>
  </div>
  <br />
  <div class="field">
    <%= f.label :store_paid %> <%= f.check_box :store_paid %>
  </div>
  <br />
  <div class="field">
    <%= f.label :refunded %> <%= f.check_box :refunded %>
  </div>
  <br />
  <div class="field">
    <%= f.label :refund_value %> <%= f.text_field :refund_value %>
  </div>
  <br />
  <div class="field">
    <%= f.label :delivery_cost %> <%= f.text_field :delivery_cost %> 
	(costo de delivery que paga el cliente por la compra)
  </div>
  <br />
  <div class="field">
    <%= f.label :total_cost, 'Costo producto' %> <%= f.text_field :total_cost %> 
	(lo que Tramanta paga por el/los productos de la compra)
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


