<% if cart.shopping_cart_items.size > 0 %>
	<% cart.shopping_cart_items.each do |item| %>
		<div style="float:left;">
			<div class="image" style="float:left">
				<%= link_to image_tag(item.purchasable.small_image), 
							dress_ver_path(:type => item.purchasable.dress_types.first.name, :slug => item.purchasable.slug) %>
			</div>			
			<div style="float:left; width:500px; margin-left:20px; margin-top:0px">
				<table>
					<tr>
						<th>
							<%= raw item.purchasable.introduction if !item.purchasable.introduction.nil? %>
						</th>
					</tr>
					<tr>
						<td>Precio Unitario: <%= number_to_currency item.purchasable.price %></td>
					</tr>
					<tr>
						<td>Talla: <%= item.size %></td>
					</tr>
					<tr>
						<td>Cantidad: <%= item.quantity.to_s %></td>
					</tr>
				</table>
			</div>
		</div>
	<% end %>
<% else %>
	  <%= render "layouts/nothing_to_show", :message => 'No has agregado Items al Carrito de Compras' %>
<% end %>
