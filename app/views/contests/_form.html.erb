<%= form_for(@contest, html: {role: 'form', class: 'form'}) do |f| %>
  <% if @contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contest.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul>
      <% @contest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre de la competencia' %><br />
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :status, 'Estado de la competencia' %><br />
    <%= f.select :status, options_for_select(["", "Activo", "Finalizado"]), {}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :image, 'Imagen de la competencia' %><br />
    <%= f.file_field :image, class: 'form-control' %>
		<p class="help-block">La imagen debe ser alargada, el tamaño óptimo sería de alrededor 1140px x 350px. No más de 2MB.</p>
  </div>
  <div class="form-group">
    <%= f.label :instructions, 'Intrucciones para participar' %><br />
    <%= f.text_area :instructions, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Guardar', class: "btn btn-default" %>
  </div>
<% end %>
