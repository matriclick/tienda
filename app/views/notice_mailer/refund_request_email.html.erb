<% content_for :content do %>
	<table width="95%" cellpadding="30">
		<tr>
			<td align="left">
				<font face="Lucida Grande, Segoe UI, Arial, Verdana, Lucida Sans Unicode, Tahoma, Sans Serif">
					Estimada,<br/><br/>
					Se ingresó una nueva solicitud de devolución.<br/><br/>
					<p>Usuario: <%= @refund_request.user.email %></p>
					<p>Razón: <%= @refund_request.refund_reason.name %></p>
					<p>Productos:
					<ul>
						<% @refund_request.dresses.each do |dress| %>
						<li><%= link_to dress.introduction, dress_ver_path(:type => dress.dress_type.name, :slug => dress.slug) %></li>
						<% end %>
					</ul>
					</p>
					<br/><br/><br/>
					Saludos,<br>
					- Equipo Tramanta<br/><br/>
				</font>
			</td>
		</tr>
	</table>
<% end %>

<%= render "layouts/email_template" %>